/* pages/person/index.wxss */
.person_avatar{
  width:152rpx;
  height:152rpx;
  border:2px solid rgba(107,161,233,1);
  border-radius:50%;
  margin: 0 auto;
  padding: 10rpx;
  box-sizing: border-box;
}
.person_avatar image{
  display: block;
  width: 100%;
  height: 100% !important;
  background: #999;
  border-radius: 50%;
}
.person_name{
  color: #37444A;
  font-size: 40rpx;
}
.button-hover{
  background: none !important;
}
.nav_list_box{
  margin-top: 50rpx;
}
.nav_item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #f1f1f1;
  box-sizing: border-box;
  color: #333333;
  font-size: 32rpx;
}
.nav_item image{
  display: block;
  width: 36rpx;
  height: 36rpx;
}