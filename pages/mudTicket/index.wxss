/* pages/mudTicket/index.wxss */
.again_pop{
  position: fixed;
  width: 80%;
  left: 10%;
  top: 50%;
  transform: translateY(-50%);
  overflow: hidden;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  border-radius: 10rpx;
  background-color: #ffffff;
  z-index: 10;
}
.again_pop view{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.again_pop input{
  font-size: 28rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
}
.again_shadow{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 5;
  background-color: rgba(0,0,0,.5);
}