/* pages/editCoupon/index.wxss */
.form_box{
  padding: 30rpx;
  box-sizing: border-box;
}
.title{
  font-size: 32rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #ccc;
  background: #f1f1f1;
}
.form_box .form_item{
  margin-bottom: 20rpx;
}
.form_box .form_item .form_txt,.video_txt{
  color: #999999;
  font-size: 24rpx;
}
.form_box .form_item .form_content{
  margin-top: 10rpx;
  border: 1px solid #cccccc;
  padding: 10rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.form_box .form_item .form_content.noborder{
  border: 0;
}
.form_box .form_item .form_content input,.video_item input{
  font-size: 26rpx;
}
.btn_box{
  margin-top: 50rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
button{
  width: 30%;
  color: #ffffff;
}
button.left{
  background: rgb(58, 127, 230);
}
button.left.button-hover{
  background: rgb(58, 127, 230);
}
button::after{
  border: 0;
  background: none;
}
.picker{
  color: #333;
  font-size: 26rpx;
}

.form_box .form_item .form_content .add_box{
  width: 400rpx;
  height: 250rpx;
  border: 1px solid #ccc;
  position: relative;
  overflow: hidden;
}
.form_box .form_item .form_content .add_box.bg{
  width: 300rpx;
  height: 400rpx;
}
.form_box .form_item .form_content .add_box text{
  display: block;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  font-size: 100rpx;
  font-weight: normal;
}
.form_box .form_item .form_content .add_box image{
  display: block;
  width: 100%;
  height: 100%;
}

.video_list_box{
  border: 1px solid #cccccc;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
}
.video_item{
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  border-bottom: 1px solid #cccccc;
  margin-bottom: 10rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
}
.video_item.last{
  margin-bottom: 0;
  border-bottom: 0;
  padding-bottom: 0;
}
.video_item view{
  width: 80%;
}
.video_item textarea{
  display: block;
  width: 100%;
  height: 180rpx;
  resize: none;
  font-size: 26rpx;
  border: 1px solid #cccccc;
  box-sizing: border-box;
  padding: 10rpx;
  border-radius: 10rpx;
}
.video_txt{
  margin-right: 20rpx;
}
.video_num{
  color: #333333;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}