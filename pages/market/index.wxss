/* pages/market/index.wxss */
.market_box{
  padding: 30rpx;
  box-sizing: border-box;
}
.market_box .title{
  color: #333333;
  font-size: 50rpx;
  margin-bottom: 50rpx;
  font-weight: bold;
}
.market_item{
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 20rpx 20rpx 30rpx;
  box-sizing: border-box;
  border-radius: 15rpx;
  color: #ffffff;
}
.market_left{
  width: 70%;
}
.ml_title{
  font-size: 32rpx;
  font-weight: bold;
}
.market_right{
  width: 30%;
}
.market_right image{
  display: block;
  width: 100%;
  max-height: 200rpx;
}
.ml_label{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin: 30rpx 0 40rpx;
}
.ml_label_txt{
  display: inline-block;
  padding: 3rpx 10rpx;
  border: 2rpx solid #ffffff;
  box-sizing: border-box;
  font-size: 24rpx;
  border-radius: 10rpx;
  margin-right: 10rpx;
}
.ml_type{
  padding-left: 10rpx;
}
.ml_type_txt{
  font-size: 24rpx;
  font-weight: lighter;
  margin-top: 10rpx;
}
.bottom_words{
  color: #999999;
  font-size: 24rpx;
  text-align: center;
  padding: 10rpx 0;
  box-sizing: border-box;
}